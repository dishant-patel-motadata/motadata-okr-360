# ============================================================
# 360 FEEDBACK PLATFORM — ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control.
# ============================================================

# ── Server ───────────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# ── Supabase ─────────────────────────────────────────────────
# Found in: Supabase Dashboard → Settings → API
SUPABASE_URL=

SUPABASE_ANON_KEY=


SUPABASE_SERVICE_ROLE_KEY=

# ── Database (Direct PostgreSQL — used by better-auth pg adapter)
# Found in: Supabase Dashboard → Settings → Database → Connection string
DATABASE_URL=
# ── better-auth ──────────────────────────────────────────────
# Generate a strong random secret: `openssl rand -hex 32`
BETTER_AUTH_SECRET=your_better_auth_secret_here
BETTER_AUTH_URL=http://localhost:3000
SESSION_EXPIRY_SECONDS=604800
# ── Microsoft Teams Webhook ───────────────────────────────────
TEAMS_WEBHOOK_URL=https://your-tenant.webhook.office.com/webhookb2/...

# ── CORS ─────────────────────────────────────────────────────
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:8080

# ── Rate Limiting ────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ── Logging ──────────────────────────────────────────────────
LOG_LEVEL=info
